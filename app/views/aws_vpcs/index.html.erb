<%- model_class = AwsVpc -%>
<div class="page-header">
  <h1><%=t '.title', :default => AwsVpc %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:aws_name) %></th>
      <th><%= model_class.human_attribute_name(:cidr_block) %></th>
      <th><%= model_class.human_attribute_name(:instance_tenancy) %></th>
      <th><%= model_class.human_attribute_name(:enable_dns_support) %></th>
      <th><%= model_class.human_attribute_name(:enable_dns_hostnames) %></th>
      <th><%= model_class.human_attribute_name(:subnet_base) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @aws_vpcs.each do |aws_vpc| %>
      <tr>
        <td><%= aws_vpc.id %></td>
        <td><%= aws_vpc.name %></td>
        <td><%= aws_vpc.aws_name %></td>
        <td><%= aws_vpc.cidr_block %></td>
        <td><%= aws_vpc.instance_tenancy %></td>
        <td><%= aws_vpc.enable_dns_support %></td>
        <td><%= aws_vpc.enable_dns_hostnames %></td>
        <td><%= aws_vpc.subnet_base %></td>
        <td><%=l aws_vpc.created_at, format: :long %></td>
        <td>
          <%= link_to aws_vpc_path(aws_vpc), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to aws_vpc_path(aws_vpc), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_aws_vpc_path,
            :class => 'btn btn-primary' %>
